{% extends "back/user/layout/layout.html.twig" %}

{% block title %}Editer un utilisateur{% endblock %}

{% block subBody %}
    <h1>Modifier un utilisateur</h1>

    <div class="mt-2">
        {{ include('back/user/_form.html.twig', {'button_label': 'Modifier'}) }}
        {{ include('back/user/_delete_form.html.twig') }}
    </div>

{% if app.user.id == user.id %}
    <div class ="btn btn-outline-light mt-3">
        <a type="button" href="{{ path('app_back_user_changePassword',{"id":user.id}) }}"><i class="bi bi-shield-lock-fill">  Changer le mot de passe</i></a>
    </div>
{% endif %}

    <div class="mt-3">
        <a class="badge bg-secondary" href="{{ path('app_back_user_list') }}">Retourner sur la liste</a>
    </div>
{% endblock %}