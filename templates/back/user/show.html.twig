{% extends "back/user/layout/layout.html.twig" %}

{% block title %}User{% endblock %}

{% block subBody %}
    <h1>Utilisateur</h1>

    <table class="table">
        <thead>
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ user.name }}</td>
                </tr>
                <tr>
                    <th>Roles</th>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                </tr>
                <tr>
                    <th>Mot de Passe</th>
                    <td>Impossible de modifier le password depuis le Back-Office. Action possible uniquement par le user.</td>
                </tr>
                <tr>
                    <th>Score</th>
                    <td>{{ user.score }}</td>
                </tr>
                <tr>
                    <th>Image</th>
                    <td>{{ user.picture }}</td>
                </tr>
            </tbody>
        </thead>
    </table>

    <div class="mt-3 mb-3">
        <a class="badge bg-secondary" href="{{ path('app_back_user_list') }}">Retourner sur la liste</a>
    </div>

    <div class="mt-3">
        <a class="badge bg-light" href="{{ path('app_back_user_edit',{"id":user.id}) }}">Editer</a>
    </div>
    
   {# {{ include('back/user/_delete_form.html.twig') }} #}
{% endblock %}