{% extends 'base.html.twig' %}

{% block title %}Actor{% endblock %}

{% block body %}
    <h1>Acteur</h1>

    <div class="mb-3">
        <a href="{{ path('app_back_actor_index') }}" >Retour à la liste des acteurs</a>
    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ actor.id }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ actor.firstname }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ actor.lastname }}</td>
            </tr>
        </tbody>
    </table>

    

    <a href="{{ path('app_back_actor_edit', {'id': actor.id}) }}" class="btn btn-warning">Modifier</a>

    {{ include('back/actor/_delete_form.html.twig') }}
{% endblock %}
