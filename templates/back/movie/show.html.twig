{% extends 'back/layout/layout.html.twig' %}

{% block title %}Movie{% endblock %}

{% block subBody %}
    <h1>Movie</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ movie.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ movie.title }}</td>
            </tr>
           
            <tr>
                <th>ReleaseDate</th>
                <td>{{ movie.releaseDate ? movie.releaseDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Synopsis</th>
                <td>{{ movie.synopsis }}</td>
            </tr>
            
            <tr>
                <th>Poster</th>
                <td>{{ movie.poster }}</td>
            </tr>
            
            
        </tbody>
    </table>

    <div>
        <a href="{{ path('app_back_movie_home') }}">back to list</a>
    </div>
    <div>
        <a href="{{ path('app_back_movie_edit', {'id': movie.id}) }}">edit</a>
    </div>

    {{ include('back/movie/_delete_form.html.twig') }}
{% endblock %}
