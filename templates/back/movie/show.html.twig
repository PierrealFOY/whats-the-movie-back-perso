{% extends 'back/layout/layout.html.twig' %}

{% block title %}Film{% endblock %}

{% block subBody %}

    <h1>Film</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ movie.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ movie.title }}</td>
            </tr>
           
            <tr>
                <th>RealeaseDate</th>
                <td>{{ movie.realeaseDate ? movie.realeaseDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Synopsis</th>
                <td>{{ movie.synopsys }}</td>
            </tr>
            
            <tr>
                <th>Poster</th>
                <td>{{ movie.poster }}</td>
            </tr>

            <tr>
                <th>Acteur</th>
                <td>
                {% for actor in movie.actors %}
                  {% if actor is defined %}
                    {{ actor }} {{" "}}
                  {% endif %}
                {% endfor %}
                </td>
            </tr>  

            <tr>
          
                <th>RÃ©alisateur</th>   
                
                <td>
                {% for director in movie.directors %}
                  {% if director is defined %}
                     {{ director }}/
                  {% endif %}
                {% endfor %}
                </td>
           
            </tr> 
            <tr>
                <th>Studio</th>
            <td>
                {% for productionStudio in movie.productionStudios %}
                {{ productionStudio }}/
            
                {% endfor %}
            </td>
            </tr> 

           <tr>
                <th>Pays</th>
               <td>
                {% for countrie in movie.countries %}
                {{ countrie }}/
                {% endfor %}
                </td>
            </tr>    
           

            <tr>
                <th>Genre</th>
                <td>

                {% for genre in movie.genres %}
                {{ genre}}/
                {% endfor %}

                </td>
            </tr> 

        </tbody>
    </table>

    <div class="mt-3">
        <a class="btn btn-success" href="{{ path('app_back_movie_home') }}">Retour liste</a>
    </div>

    <div class="mt-3">
        <a class="btn btn-success" href="{{ path('app_back_movie_edit', {'id': movie.id}) }}">Modifier</a>
    </div>

    {{ include('back/movie/_delete_form.html.twig') }}
{% endblock %}
