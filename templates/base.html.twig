
<!doctype html>
<html lang="fr">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
    <!-- Bootstrap icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <!-- Our custom CSS -->
    <link rel="stylesheet" href="{{asset('css/wtm.css')}}">
    <!-- favicon -->
   

    <title> {% block title %}What's the Movie{% endblock %}</title>
</head>

<body>

    <!-- Nav -->
    
    {# Si le mot back est présent dans la route #}
    {% if "back" in app.request.get("_route") %}
        <nav class="navbar navbar-expand-lg navbar-dark bg-success">
    {% else %}
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    {% endif %}
        <div class="container-fluid">
            <a href="{{path("app_back_movie_home")}}" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none header-logo">
                {#<img src="{{asset('favicon.png')}}" height="24" alt="Logo WTM">#}
                <span class="header-logo__title">WTM</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                {% block menu %}
                    <li class="nav-item">
                        <a class="nav-link {% block home_menu %}{% endblock %}" href="{{path("app_back_movie_home")}}">Accueil</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {% block movie_menu %}{% endblock %}" href="{{path("app_back_movie_home")}}"><i class="bi bi-film"></i> Films, séries TV</a>
                    </li>
                    {% if is_granted("IS_AUTHENTICATED_FULLY") %}
                        <li class="nav-item">
                            <a class="nav-link {% block favorite_menu %}{% endblock %}" href="{{path("app_favorite_list")}}"><i class="bi bi-bookmark"></i> Ma liste</a>
                        </li>
                    
                    {% endif %}
                    {% if is_granted("ROLE_MANAGER") %}
                        <li class="nav-item">
                            <a class="nav-link " href="{{path("app_back_movie_index")}}"><i class="bi bi-emoji-smile"></i> Back-office</a>
                        </li>
                    
                    {% endif %}
                    
                {% endblock %}
                </ul>

        </div>
    </nav>

    {# ce block body, est l'espace laissé pour que les templates viennnent se "caler" dedans #}
    {% block body %}{% endblock %}

    {% if randomMovie is defined %}
        <div class="text-center pt-3 border-top" >
            <p>Un film au hasard : <a href="{{path("app_movie_show",{id:randomMovie.id, slug:randomMovie.slug})}}">{{randomMovie.title}}</a></p>
        </div>
    
    {% endif %}
    <!-- footer -->
    <footer class="container-fluid py-4 border-top text-center">
        <span class="text-muted">what's the movie made with &hearts; !
            
        </span>
    </footer>

    <!-- Optional JavaScript; choose one of 
        the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ"
        crossorigin="anonymous"></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
    <!--
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js" integrity="sha384-W8fXfP3gkOKtndU4JGtKDvXbO53Wy8SZCQHczT5FMiiqmQfUpWbYdTil/SxwZgAN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.min.js" integrity="sha384-skAcpIdS7UcVUC05LJ9Dxay8AXcDYfBJqt1CJ85S/CFujBsIzCIv+l9liuYLaMQ/" crossorigin="anonymous"></script>
    -->
</body>

</html>