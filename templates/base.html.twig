
<!doctype html>
<html lang="fr">

<head>

  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" />
  <!-- Bootstrap icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
  <!-- Our custom CSS -->
  <link rel="stylesheet" href="{{asset('css/wtm.css')}}">
  
</head>

<body>

    <!-- Nav -->
    
  <nav class="navbar navbar-expand-lg navbar-dark bg-success sticky-top">

    
  <div class="container-fluid">
            <a href="{{path("app_back_home")}}" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none header-logo">
                
                <span class="header-logo__title">WTM</span>
            </a>    
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarColor01">
      <ul class="navbar-nav me-auto">
        <li class="nav-item">
            <a class="nav-link {% if "app_back_movie" in app.request.get('_route') %}active{% endif %} "  href="{{path("app_back_movie_home")}}"><i class="bi bi-film">    
            </i>Films</a>
        </li>
        <li class="nav-item">
          <a class="nav-link {% if "app_back_actor" in app.request.get('_route') %}active{% endif %}" href="{{path("app_back_actor_index")}}"><i class="bi bi-emoji-sunglasses"></i> Acteur</a>
        </li>
        <li class="nav-item">
          <a class="nav-link {% if "app_back_country" in app.request.get('_route') %}active{% endif %}" href="{{path("app_back_country_index")}}"><i class="bi bi-signpost"></i> Pays</a>
        </li>
        <li class="nav-item">
          <a class="nav-link {% if "app_back_productionStudio" in app.request.get('_route') %}active{% endif %}" href="{{path("app_back_productionStudio_index")}}"><i class="bi bi-cash-coin"></i> Studio de Production</a>
        </li>
        <li class="nav-item">
          <a class="nav-link {% if "app_back_director" in app.request.get('_route') %}active{% endif %}" href="{{path("app_back_director_index")}}"><i class="bi bi-camera-reels"></i> RÃ©alisateur</a>
        </li>
        <li class="nav-item">
          <a class="nav-link {% if "app_back_genre" in app.request.get('_route') %}active{% endif %}" href="{{path("app_back_genre_index")}}"><i class="bi bi-collection"></i> Genre</a>
        </li> 
        <li class="nav-item">
          <a class="nav-link {% if "app_back_user" in app.request.get('_route') %}active{% endif %}" href="{{path("app_back_user_list")}}"><i class="bi bi-person"></i> Utilisateur</a>
        </li>
      </ul>
      <form class="d-flex me-1" action="{{path("app_back_search")}}">
        <input class="form-control me-sm-2" type="search" name="search" placeholder="Recherche">
        <button class="btn btn-secondary  " type="submit"><i class="bi bi-search"></i></button>
      </form>
      
      {% if is_granted("IS_AUTHENTICATED_FULLY") %}
                      {# {% if app.user %} #}
        <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
            <li class="nav-item ">
              <a class="nav-link ">
                  <span>
                  {{app.user.email}} |
                  {% if "ROLE_ADMIN" in app.user.roles %}
                      Administrateur
                  {% else %}
                      Utilisateur
                  {% endif %}
                  </span><i class="bi bi-person-square">
                  </i>
              </a>
            </li>
        </ul>
      {% endif %}

      {% if is_granted("IS_AUTHENTICATED_FULLY") %}
       <a href="{{path("app_back_logout")}}" class="btn btn-danger me-2">Deconnexion</a>
      {% else %}  
       <a href="{{path("app_back_login_index")}}" class="btn btn-danger me-2">Connexion</a>
      {% endif %}
    </div>
  </div>
</nav>

<main class="container">
  <div class="mt-4">
    {% block body %}{% endblock %}

  </div>
</main>

        
    <!-- footer -->
    <footer class="container-fluid py-4 border-top text-center">
        <span class="text-muted">what's the movie made with &hearts; !
             
        </span>
    </footer>

    <!--  Bootstrap Bundle with Popper--> 
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.0/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.full.min.js"></script>
    <script>
    $( '.select2' ).select2( {
    theme: "bootstrap-5",
    width: $( this ).data( 'width' ) ? $( this ).data( 'width' ) : $( this ).hasClass( 'w-100' ) ? '100%' : 'style',
    placeholder: $( this ).data( 'placeholder' ),
    closeOnSelect: false,
    } );
    </script>
    

</body>

</html>